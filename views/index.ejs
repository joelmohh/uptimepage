<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>joelmo.dev</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <nav class="navbar">
        <a class="logo" href="https://joelmo.dev">joelmo <span></span> dev</a>
        <div class="actions">
            <button class="theme-toggle">Aa</button>
        </div>
    </nav>


    <div class="container">
        <section class="general-system">
            <div class="status <%= statusClass %>"></div>
            <div class="info">
                <h2 class="ls">
                    <%= statusMessage %>
                </h2>
                <p>Last updated: <%= lastUpdated %>
                </p>
            </div>
        </section>
        
        <h2 class="section-title">
                Overall Uptime
        </h2>
        <section class="overall">
            <div class="overall-stats">
                <div class="overall-card">
                    <p class="overall-uptime">
                        99.9%
                    </p>
                    <p class="overall-period">Last 90 days</p>
                </div>
                <div class="overall-card">
                    <p class="overall-uptime">
                        99%
                    </p>
                    <p class="overall-period">Last 30 days</p>
                </div>

                <div class="overall-card">
                    <p class="overall-uptime">
                        99%
                    </p>
                    <p class="overall-period">Last 7 days</p>
                </div>

                <div class="overall-card">
                    <p class="overall-uptime">
                        99%
                    </p>
                    <p class="overall-period">Last 24 hours</p>
                </div>
            </div>
        </section>

        <h2 class="section-title">
                Uptime <span class="muted">Last 90 days</span>
        </h2>
        <section id="projects" class="services">
            <% projects.forEach(function(project) { %>
                <div class="service-card" data-service="<%= project.name %>" data-description="<%= project.description %>" last90days="<%= project.uptime90 %>" uptime="<%= project.uptime %>" projectID="<%= project.id %>"></div>
            <% }); %>
        </section>

        <h2 class="section-title">
                Recent Incidents
        </h2>
        <section class="incidents">            
            <div class="no-incidents">
                No recent incidents to display.
            </div>
            <!--<div class="incident-card">
                <h3 class="incident-title">API Gateway Latency</h3>
                <p class="incident-time">2024-05-08 09:00 - 09:45 UTC</p>
                <p class="incident-description">Increased latency observed on the API Gateway due to high traffic volume.</p>
            </div>-->
        </section>
    </div>
    <script src="/js/script.js"></script>
</body>

</html>